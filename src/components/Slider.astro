---
const { courses } = Astro.props;
---

<div class="relative flex justify-center items-center max-w-full overflow-hidden">
  <div class="flex items-center justify-center px-6 py-12 space-x-8">
    {courses.length > 0 ? (
      <div id="courseElement" class="bg-white p-6 rounded-xl shadow-lg text-center w-72 md:w-96">
        <img class="w-full h-40 object-cover rounded-lg" src={courses[0].imagen} alt={courses[0].titulo} />
        <h2 class="mt-4 text-2xl font-semibold">{courses[0].titulo}</h2>
        <p class="mt-2 text-sm text-gray-600">{courses[0].descripcion_resumida}</p>
        <button class="mt-4 px-6 py-2 bg-blue-500 text-white text-lg font-semibold rounded-lg hover:bg-blue-600 transition duration-300">
          Ver m√°s
        </button>
      </div>
    ) : (
      <p class="text-center text-gray-600">Cargando cursos...</p>
    )}
  </div>

  <button
    id="prevButton"
    class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-3 rounded-full hover:bg-gray-900 transition duration-300"
  >
    &#10094;
  </button>
  <button
    id="nextButton"
    class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-3 rounded-full hover:bg-gray-900 transition duration-300"
  >
    &#10095;
  </button>
</div>

<script type="module" src="/scripts/slider.js"></script>